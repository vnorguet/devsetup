[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow
  local = green
  remote = cyan
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  rb = rebase
  ri = rebase -i
  rc = rebase --continue
  amend = commit --amend
  ap = add -p
  lg = log -p
  sb = show-branch
  lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  la = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
  lh = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Creset' --abbrev-commit --date=relative
  # Last week
  lw = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --since=1.weeks
  # Log without branche names
  changelog = log --pretty=format:'%s' --abbrev-commit --date=relative
  rim = rebase -i origin/master
  rid = rebase -i origin/dev
  ricm = rebase -i core/master
  ricd = rebase -i core/dev
[apply]
  whitespace = strip
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol,tab-in-indent,space-before-tab,blank-at-eol
    autocrlf = input
  editor = vim
[diff]
  color = auto
  rename = copy
[pager]
  color = true
[status]
  color = auto
[push]
  default = simple
[filter "tabspace"]
  smudge = unexpand --tabs=4 --first-only
  clean = expand --tabs=4 --initial
[credential]
  helper = store
